set encoding=utf-8
set fileencoding=utf-8

syntax on
colorscheme darkblue

if has('mouse')
  set mouse=a
  set mousehide        " hide mouse pointer when typing
endif

set bs=2

set autoindent
set expandtab
set shiftwidth=4
set smartindent
set smarttab
set softtabstop=4

set number
set ruler

set laststatus=2

set list
set listchars=tab:¦\ ,trail:~,extends:>,precedes:<,space:⋅

set conceallevel=1
